<div class="container">
	<div class="row">
		<div class="col-xs-12 text-center" id="top-bar">
			<img src="/images/giphy.gif" alt="burger" />
		</div>
		<div class="col-xs-6 text-center" class="task">
			<div class="row">
			  {{#each burgers}}
			  	{{#unless this.devoured}}
				<div class="col-xs-9 text-center">
					<pre>{{this.id}}. {{this.burger_name}}
					</pre>
				  		<!-- {{this.Date}} -->
				</div>
				<div class="col-xs-3 text-center">
					<form method="POST" action="/burgers/update/{{id}}" class="button-size">
						<input input type="hidden" type="text" name="burger_id" value={{this.id}}><br>
						<button id="{{this.id}}" type="submit" class="btn btn-default">Devour it!</button>
					</form>
				</div>
				{{/unless}}
			  {{/each}}
			</div>
		</div>
		<div class="col-xs-6 text-center" class="task">
			  {{#each burgers}}
			  	{{#if this.devoured}}
			  		<input class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}" readonly>
				{{/if}}
			  {{/each}}
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-xs-12 text-center enter_section">
			<form action="/burgers/create" method="POST">
				<input type="text" class="form-control" name="burger_name" value="" id="enter_text">
				<button type="submit" class="btn btn-success" id="text-enter-button">Order</button>
			</form>
			<p>Use "Order" to get as many burgers as you can handle. Then devour all of them! Afterwards, don't forget to "Clean up!"</p>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-12 text-center enter_section">
			<form action="/burgers/deleteall" method="POST">
				<button type="submit" class="btn btn-info" id="text-enter-button">Clean up!</button>
			</form>
		</div>
	</div>
</div>